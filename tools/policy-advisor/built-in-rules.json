{
  "escape_pattern": [
    {
      "id": "disallow-write-core-pattern",
      "enforcers": ["apparmor", "bpf"],
      "conflicts": {
        "files": [
          {
            "path_regex": "\/proc\/sys\/kernel\/core_pattern",
            "permissions": ["w", "a"]
          }
        ]
      },
      "applicable": {
        "features": ["privileged-container", "mount-sth", "umount-sth", "dind"],
        "capabilities": ["sys_admin"]
      }
    },
    {
      "id": "disallow-mount-securityfs",
      "enforcers": ["apparmor", "bpf"],
